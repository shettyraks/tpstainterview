{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name"
		},
		"HttpLS": {
			"type": "string"
		},
		"AzureDataLakeStorage1": {
			"type": "string"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/pipeline1')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Copy_data_from_rss_to_adls",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "XmlSource",
								"storeSettings": {
									"type": "HttpReadSettings",
									"requestMethod": "GET"
								},
								"formatSettings": {
									"type": "XmlReadSettings",
									"validationMode": "none",
									"namespaces": true
								}
							},
							"sink": {
								"type": "ParquetSink",
								"storeSettings": {
									"type": "AzureBlobFSWriteSettings",
									"copyBehavior": "FlattenHierarchy"
								},
								"formatSettings": {
									"type": "ParquetWriteSettings"
								}
							},
							"enableStaging": false,
							"translator": {
								"type": "TabularTranslator",
								"mappings": [
									{
										"source": {
											"path": "$['rss']['channel']['title']"
										},
										"sink": {
											"name": "rss_channel_title"
										}
									},
									{
										"source": {
											"path": "$['rss']['channel']['ttl']"
										},
										"sink": {
											"name": "ttl"
										}
									},
									{
										"source": {
											"path": "$['rss']['channel']['link']"
										},
										"sink": {
											"name": "rss_channel_link"
										}
									},
									{
										"source": {
											"path": "$['rss']['channel']['description']"
										},
										"sink": {
											"name": "rss_channel_description"
										}
									},
									{
										"source": {
											"path": "$['rss']['channel']['language']"
										},
										"sink": {
											"name": "language"
										}
									},
									{
										"source": {
											"path": "$['rss']['channel']['copyright']"
										},
										"sink": {
											"name": "copyright"
										}
									},
									{
										"source": {
											"path": "$['rss']['channel']['lastBuildDate']"
										},
										"sink": {
											"name": "lastBuildDate"
										}
									},
									{
										"source": {
											"path": "$['rss']['channel']['image']['url']"
										},
										"sink": {
											"name": "url"
										}
									},
									{
										"source": {
											"path": "$['rss']['channel']['image']['title']"
										},
										"sink": {
											"name": "rss_channel_image_title"
										}
									},
									{
										"source": {
											"path": "$['rss']['channel']['image']['link']"
										},
										"sink": {
											"name": "rss_channel_image_link"
										}
									},
									{
										"source": {
											"path": "$['rss']['channel']['item'][0]['title']"
										},
										"sink": {
											"name": "rss_channel_item'][0]['title"
										}
									},
									{
										"source": {
											"path": "$['rss']['channel']['item'][0]['description']"
										},
										"sink": {
											"name": "rss_channel_item'][0]['description"
										}
									},
									{
										"source": {
											"path": "$['rss']['channel']['item'][0]['brand']"
										},
										"sink": {
											"name": "brand"
										}
									},
									{
										"source": {
											"path": "$['rss']['channel']['item'][0]['date']"
										},
										"sink": {
											"name": "date"
										}
									},
									{
										"source": {
											"path": "$['rss']['channel']['item'][0]['price']"
										},
										"sink": {
											"name": "price"
										}
									},
									{
										"source": {
											"path": "$['rss']['channel']['item'][0]['trading-name']"
										},
										"sink": {
											"name": "trading-name"
										}
									},
									{
										"source": {
											"path": "$['rss']['channel']['item'][0]['location']"
										},
										"sink": {
											"name": "location"
										}
									},
									{
										"source": {
											"path": "$['rss']['channel']['item'][0]['address']"
										},
										"sink": {
											"name": "address"
										}
									},
									{
										"source": {
											"path": "$['rss']['channel']['item'][0]['phone']"
										},
										"sink": {
											"name": "phone"
										}
									},
									{
										"source": {
											"path": "$['rss']['channel']['item'][0]['latitude']"
										},
										"sink": {
											"name": "latitude"
										}
									},
									{
										"source": {
											"path": "$['rss']['channel']['item'][0]['longitude']"
										},
										"sink": {
											"name": "longitude"
										}
									},
									{
										"source": {
											"path": "$['rss']['channel']['item'][0]['site-features']"
										},
										"sink": {
											"name": "site-features"
										}
									},
									{
										"source": {
											"path": "$['rss']['@version']"
										},
										"sink": {
											"name": "@@version"
										}
									}
								]
							}
						},
						"inputs": [
							{
								"referenceName": "Xml1",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "feed",
								"type": "DatasetReference"
							}
						]
					}
				],
				"annotations": [],
				"lastPublishTime": "2021-12-04T12:16:29Z"
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/Xml1')]",
				"[concat(variables('factoryId'), '/datasets/feed')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/Xml1')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "[parameters('HttpLS')]",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "Xml",
				"typeProperties": {
					"location": {
						"type": "HttpServerLocation"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/feed')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "[parameters('AzureDataLakeStorage1')]",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "Parquet",
				"typeProperties": {
					"location": {
						"type": "AzureBlobFSLocation",
						"fileName": "feed.parquet",
						"folderPath": "Raw/FuelWatch/2021-12-04",
						"fileSystem": "datalakestore"
					},
					"compressionCodec": "snappy"
				},
				"schema": []
			},
			"dependsOn": []
		}
	]
}